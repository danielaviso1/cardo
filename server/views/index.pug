doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main(role="main" class="container")
      h1#pageTitle Welcome to Card - The Note Taking App
      form(action="/" method="POST")
        .form-group
          label Title
          input.form-control(type="text" name="title")
        .form-group
          label Content
          textarea.form-control(rows="3" name="content")
        .form-group
          label Author
          input.form-control(type="text" name="author")
        .form-group
          button.btn.btn-primary(type="submit") Add Note
          button.btn#clearBtn(type="button") Clear
      section
        table.table
          tr
            th Title
            th Content
            th Author
          each note in notes
            tr
              td= note.title
              td= note.content
              td= note.author
          
      
    script(src="/cardo.js")
